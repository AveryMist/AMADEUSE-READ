<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base application theme. -->
	<style name="Base.Theme.AmadeuseRead" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- Disallow 'Force dark theme' -->
		<item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

		<!-- Theme Colors -->
		<item name="colorPrimary">@color/amadeuse_primary</item>
		<item name="colorPrimaryContainer">@color/amadeuse_primaryContainer</item>
		<item name="colorOnPrimary">@color/amadeuse_onPrimary</item>
		<item name="colorOnPrimaryContainer">@color/amadeuse_onPrimaryContainer</item>
		<item name="colorPrimaryInverse">@color/amadeuse_inversePrimary</item>
		<item name="colorSecondary">@color/amadeuse_secondary</item>
		<item name="colorSecondaryContainer">@color/amadeuse_secondaryContainer</item>
		<item name="colorOnSecondary">@color/amadeuse_onSecondary</item>
		<item name="colorOnSecondaryContainer">@color/amadeuse_onSecondaryContainer</item>
		<item name="colorTertiary">@color/amadeuse_tertiary</item>
		<item name="colorTertiaryContainer">@color/amadeuse_tertiaryContainer</item>
		<item name="colorOnTertiary">@color/amadeuse_onTertiary</item>
		<item name="colorOnTertiaryContainer">@color/amadeuse_onTertiaryContainer</item>
		<item name="colorSurface">@color/amadeuse_surface</item>
		<item name="colorSurfaceDim">@color/amadeuse_surfaceDim</item>
		<item name="colorSurfaceBright">@color/amadeuse_surfaceBright</item>
		<item name="colorSurfaceContainerLowest">@color/amadeuse_surfaceContainerLowest</item>
		<item name="colorSurfaceContainerLow">@color/amadeuse_surfaceContainerLow</item>
		<item name="colorSurfaceContainer">@color/amadeuse_surfaceContainer</item>
		<item name="colorSurfaceContainerHigh">@color/amadeuse_surfaceContainerHigh</item>
		<item name="colorSurfaceContainerHighest">@color/amadeuse_surfaceContainerHighest</item>
		<item name="colorSurfaceVariant">@color/amadeuse_surfaceVariant</item>
		<item name="colorOnSurface">@color/amadeuse_onSurface</item>
		<item name="colorOnSurfaceVariant">@color/amadeuse_onSurfaceVariant</item>
		<item name="colorSurfaceInverse">@color/amadeuse_inverseSurface</item>
		<item name="colorOnSurfaceInverse">@color/amadeuse_inverseOnSurface</item>
		<item name="colorOnBackground">@color/amadeuse_onSurface</item>
		<item name="colorError">@color/error</item>
		<item name="colorErrorContainer">@color/errorContainer</item>
		<item name="colorOnError">@color/onError</item>
		<item name="colorOnErrorContainer">@color/onErrorContainer</item>
		<item name="colorOutline">@color/amadeuse_outline</item>
		<item name="colorOutlineVariant">@color/amadeuse_outline</item>

		<item name="android:divider">@color/amadeuse_outline</item>

		<!-- Handles RTL text -->
		<item name="android:textAlignment">gravity</item>
		<item name="android:textDirection">locale</item>

		<!-- Themes -->
		<item name="android:windowLightStatusBar" tools:targetApi="M">@bool/light_status_bar</item>
		<item name="android:statusBarColor">@color/dim</item>
		<item name="android:navigationBarColor">@color/surface_amoled</item>
		<item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@null</item>
		<item name="android:enforceNavigationBarContrast" tools:targetApi="Q">false</item>
		<item name="android:enforceStatusBarContrast" tools:targetApi="Q">false</item>
		<item name="android:itemTextAppearance">@style/TextAppearance.Widget.Menu</item>
		<item name="alertDialogTheme">@style/ThemeOverlay.AmadeuseRead.AlertDialog</item>
		<item name="bottomSheetDialogTheme">@style/ThemeOverlay.AmadeuseRead.BottomSheetDialog</item>
		<item name="sideSheetDialogTheme">@style/ThemeOverlay.AmadeuseRead.SideSheetDialog</item>
		<item name="textAppearanceButton">@style/TextAppearance.AmadeuseRead.Button</item>
		<item name="android:buttonStyle">?attr/borderlessButtonStyle</item>
		<item name="android:backgroundDimAmount">0.32</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="actionBarPopupTheme">@style/Widget.Material3.PopupMenu.ListPopupWindow</item>
		<item name="actionModeStyle">@style/Widget.AmadeuseRead.ActionMode</item>
		<item name="actionModeCloseDrawable">@drawable/abc_ic_clear_material</item>
		<item name="actionModeWebSearchDrawable">@drawable/abc_ic_search_api_material</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.AmadeuseRead</item>
		<item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
		<item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
		<item name="appBarLayoutStyle">@style/Widget.AmadeuseRead.AppBarLayout</item>
		<item name="bottomNavigationStyle">@style/Widget.AmadeuseRead.BottomNavigationView</item>
		<item name="tabStyle">@style/Widget.AmadeuseRead.Tabs</item>
		<item name="materialCardViewStyle">@style/Widget.AmadeuseRead.CardView.Filled</item>
		<item name="recyclerViewStyle">@style/Widget.AmadeuseRead.RecyclerView</item>
		<item name="fastScrollerStyle">@style/Widget.AmadeuseRead.FastScroller</item>
		<item name="listItemTextViewStyle">@style/Widget.AmadeuseRead.ListItemTextView</item>
		<item name="materialSwitchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
		<item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.M3</item>
		<item name="collapsingToolbarLayoutStyle">@style/Widget.AmadeuseRead.CollapsingToolbar</item>
		<item name="circularProgressIndicatorStyle">@style/Widget.AmadeuseRead.CircularProgressIndicator</item>
		<item name="linearProgressIndicatorStyle">@style/Widget.AmadeuseRead.LinearProgressIndicator</item>
		<item name="bottomSheetDragHandleStyle">@style/Widget.AmadeuseRead.BottomSheet.DragHandle</item>
		<item name="android:dropDownSpinnerStyle">@style/Widget.AmadeuseRead.Spinner.DropDown</item>
		<item name="dotIndicatorStyle">@style/Widget.AmadeuseRead.DotIndicator</item>
		<item name="badgeViewStyle">@style/Widget.AmadeuseRead.BadgeView</item>

		<!-- Text appearance -->
		<item name="actionMenuTextAppearance">@style/TextAppearance.AmadeuseRead.Menu</item>
		<item name="android:textAppearanceListItem">?attr/textAppearanceBodyLarge</item>
		<item name="android:textAppearanceListItemSecondary">
			@style/TextAppearance.AmadeuseRead.Preference.Secondary
		</item>

	</style>

	<!--== Default Theme ==-->
	<style name="Theme.AmadeuseRead" parent="Base.Theme.AmadeuseRead" />

	<!-- Monet theme only support S+ -->
	<style name="Theme.AmadeuseRead.Monet" />

	<style name="ThemeOverlay.AmadeuseRead" parent="ThemeOverlay.Material3.Light" />

	<style name="ThemeOverlay.AmadeuseRead.Amoled" parent="" />

	<style name="Theme.AmadeuseRead.AppWidgetContainer" parent="@style/Theme.MaterialComponents.Light">
		<item name="android:colorBackground">@color/amadeuse_background</item>
		<item name="android:panelColorBackground">@color/amadeuse_primaryContainer</item>
	</style>
</resources>
