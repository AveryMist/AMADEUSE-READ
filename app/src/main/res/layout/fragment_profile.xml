<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="@dimen/margin_normal">

		<!-- Header -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_marginBottom="@dimen/margin_normal">

			<com.google.android.material.imageview.ShapeableImageView
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_marginBottom="@dimen/margin_normal"
				android:src="@mipmap/ic_launcher"
				android:contentDescription="@string/app_name"
				android:scaleType="centerCrop"
				app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.AmadeuseRead.RoundedCorners" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/profile"
				android:textAppearance="?attr/textAppearanceHeadlineMedium"
				android:layout_marginBottom="@dimen/margin_small" />

		</LinearLayout>

		<!-- Buttons Grid -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!-- Row 1 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="@dimen/margin_normal">

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_settings"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginEnd="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_settings"
							android:contentDescription="@string/settings"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/settings"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_downloads"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginStart="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_download"
							android:contentDescription="@string/downloads"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/downloads"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

			<!-- Row 2 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginBottom="@dimen/margin_normal">

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_backup"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginEnd="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_backup_restore"
							android:contentDescription="@string/backup_restore"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/backup_restore"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_bookmarks"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginStart="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_bookmark"
							android:contentDescription="@string/bookmarks"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/bookmarks"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

			<!-- Row 3 -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_statistics"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginEnd="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_chart"
							android:contentDescription="@string/statistics"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/statistics"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/button_about"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:layout_marginStart="@dimen/margin_small"
					android:clickable="true"
					android:focusable="true"
					app:cardCornerRadius="@dimen/m3_card_corner"
					app:cardElevation="4dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:gravity="center"
						android:padding="@dimen/margin_normal">

						<ImageView
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:layout_marginBottom="@dimen/margin_small"
							android:src="@drawable/ic_info_outline"
							android:contentDescription="@string/about"
							app:tint="?attr/colorPrimary" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/about"
							android:textAppearance="?attr/textAppearanceBodyMedium"
							android:gravity="center" />

					</LinearLayout>

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>
