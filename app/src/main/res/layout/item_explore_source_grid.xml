<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Widget.AmadeuseRead.SourceCard"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="4dp"
	android:clickable="true"
	android:focusable="true"
	app:cardElevation="2dp"
	app:cardCornerRadius="16dp"
	app:rippleColor="?attr/colorControlHighlight"
	tools:layout_width="120dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="12dp">

		<com.google.android.material.imageview.ShapeableImageView
			android:id="@+id/imageView_icon"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:background="?colorSurfaceContainer"
			android:labelFor="@id/textView_title"
			android:padding="2dp"
			android:scaleType="centerCrop"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:shapeAppearance="?shapeAppearanceCornerMedium"
			app:strokeColor="?colorOutline"
			app:strokeWidth="1dp"
			tools:src="@tools:sample/avatars" />

		<!-- Status indicator -->
		<ImageView
			android:id="@+id/imageView_status"
			android:layout_width="16dp"
			android:layout_height="16dp"
			android:layout_margin="2dp"
			android:background="@drawable/bg_badge_default"
			android:padding="2dp"
			android:scaleType="centerInside"
			android:visibility="gone"
			app:layout_constraintEnd_toEndOf="@id/imageView_icon"
			app:layout_constraintTop_toTopOf="@id/imageView_icon"
			app:tint="?attr/colorOnTertiary"
			tools:src="@drawable/ic_disable"
			tools:visibility="visible" />

		<TextView
			android:id="@+id/textView_title"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:drawablePadding="2dp"
			android:elegantTextHeight="false"
			android:ellipsize="end"
			android:gravity="center_horizontal"
			android:maxLines="2"
			android:textAlignment="center"
			android:textAppearance="?attr/textAppearanceBodyMedium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/imageView_icon"
			tools:drawableStart="@drawable/ic_pin_small"
			tools:text="@tools:sample/lorem[0]" />

		<!-- Badges container -->
		<LinearLayout
			android:id="@+id/layout_badges"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:gravity="center"
			android:orientation="horizontal"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/textView_title">

			<!-- NSFW Badge -->
			<TextView
				android:id="@+id/textView_nsfw"
				style="@style/Widget.AmadeuseRead.TextView.Badge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="4dp"
				android:backgroundTint="@color/nsfw_18"
				android:text="@string/nsfw"
				android:textSize="9sp"
				android:visibility="gone"
				tools:visibility="visible" />

			<!-- Popular Badge -->
			<TextView
				android:id="@+id/textView_popular"
				style="@style/Widget.AmadeuseRead.TextView.Badge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="4dp"
				android:backgroundTint="@color/common_green"
				android:text="@string/popular"
				android:textSize="9sp"
				android:visibility="gone"
				tools:visibility="visible" />

			<!-- New Badge -->
			<TextView
				android:id="@+id/textView_new"
				style="@style/Widget.AmadeuseRead.TextView.Badge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:backgroundTint="@color/blue_primary"
				android:text="@string/new_source"
				android:textSize="9sp"
				android:visibility="gone"
				tools:visibility="visible" />

		</LinearLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
